{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "node16",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts"]
}
